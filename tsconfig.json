{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "ignoreDeprecations": "6.0",
    "paths": { "@/*": ["src/*"]
    },
    "module": "ESnext",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "lib": ["ES2017", "DOM"]

  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    "**/*.json",
    "**/*.svg",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
  ]
}