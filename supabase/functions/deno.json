{
  "compilerOptions": {
    "lib": ["deno.ns", "deno.window"],
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "imports": {
    "https://deno.land/std/": "https://deno.land/std@0.224.0/",
    "@supabase/supabase-js": "jsr:@supabase/supabase-js@^2.43.5",
    "npm:@google/generative-ai": "npm:@google/generative-ai",
    "cors": "https://deno.land/x/cors@v1.2.2/mod.ts"
  },
  "lint": {
    "rules": {
      "exclude": ["no-explicit-any"]
    }
  },
  "fmt": {
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": true
    }
  }
}